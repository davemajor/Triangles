<div id="copy" class="row">

<div id="text" class="span6" >
  <p>Make a triangle with AB = 8, BC = 5, and B = 70&deg</p></div>
  <div id="form" class="span4 form-inline">
    <%= form_tag("/triangles", :method => :post, :remote => "true" ) do %>
      <%= text_field(:triangle, :name, :placeholder => "Enter your name") %>
      <%= hidden_field(:triangle, :x1) %>
      <%= hidden_field(:triangle, :y1) %>
      <%= hidden_field(:triangle, :x2) %>
      <%= hidden_field(:triangle, :y2) %>
      <%= hidden_field(:triangle, :x3) %>
      <%= hidden_field(:triangle, :y3) %>
      <%= hidden_field_tag("stage","1") %>
      <%= hidden_field(:triangle, :stage, :value => "1") %>
      <%= submit_tag("Share", :class => "btn btn-large btn-primary", :disabled => "true")%>
      </div>
    <% end %>
  </div>
</div>
</div>

<%= javascript_tag do -%> 
